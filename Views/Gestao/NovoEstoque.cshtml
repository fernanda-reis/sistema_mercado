@model aspnetcore_supermercado.Models.Estoque;
@{
    Layout = "_LayoutAdmin";
}

<h3>Novo Estoque</h3>
<hr/>

<form class="form-horizontal" method="POST" asp-action="Salvar" asp-controller="Estoque">

    <label asp-for="ProdutoId">Produto</label>
    <select class="form-control"  asp-for="ProdutoId" asp-items='@(new SelectList(@ViewBag.ListaDeProdutos, "Id", "Nome"))'></select>
    <br>

    <label asp-for="Quantidade"></label>
    <input class="form-control" type="number" asp-for="Quantidade" placeholder="0">
    <br>
    
    <button class="btn btn-success">Cadastrar</button>
</form>