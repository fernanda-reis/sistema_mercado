@model aspnetcore_supermercado.DTO.PromocaoDTO
@{
    Layout = "_LayoutAdmin";
}

<h3>Editar Promoção</h3>
<hr/>

<form method="POST" asp-action="Atualizar" asp-controller="Promocoes">
    <input type="hidden" asp-for="Id">

    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da promoção">
    <span asp-validation-for="Nome"></span>
    <br>

    <label asp-for="ProdutoId">Produto</label>
    <select class="form-control"  asp-for="ProdutoId" asp-items='@(new SelectList(@ViewBag.ListaDeProdutos, "Id", "Nome"))'></select>
    <br>

    <label asp-for="Desconto">Valor do desconto</label>
    <input class="form-control" type="number" max="100" min="0" asp-for="Desconto" placeholder="Ex: 10%">
    <span asp-validation-for="Desconto"></span>
    <br>

    <button class="btn btn-success">Cadastrar</button>

</form>

